<Page
    x:Class="Grupp1BankApp.View.RemoveAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grupp1BankApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="RemoveAccountGrid" BorderBrush="#FFDA680F" BorderThickness="10,10,10,10">
        <TextBlock x:Name="RemoveAccountLabel" HorizontalAlignment="Left" Margin="854,80,0,0" Text="Ta bort konto:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36"/>
        <TextBox x:Name="ChosenAccountField" HorizontalAlignment="Center" Margin="0,166,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" PlaceholderText="Valt konto" IsReadOnly="True" IsEnabled="False" Width="562" TextAlignment="Center"/>
        <TextBox x:Name="PinNumberBoxField" HorizontalAlignment="Left" Margin="965,868,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" RenderTransformOrigin="0.07,0.492" PlaceholderText="Personlig kod" Width="276" TextAlignment="Center"/>
        <Button x:Name="RemoveAccountButton" Content="Ta bort konto" Margin="678,868,0,0" VerticalAlignment="Top" FontSize="36" Click="RemoveAccountButton_Click"/>
        <ListView HorizontalAlignment="Center" Height="549" VerticalAlignment="Center" Width="842" BorderBrush="#FFDA680F" BorderThickness="5,5,5,5"/>

    </Grid>
</Page>
