        <TextBlock x:Name="ApprovedForLoanLabel" HorizontalAlignment="Left" Margin="960,392,0,0" Text="Godkänd eller ej?" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="471" FontSize="36"/>
