        <TextBlock HorizontalAlignment="Left" Margin="455,89,0,0" Text="Hur mycket att låna?" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="471" FontSize="36"/>
        <TextBox x:Name="AmountToBorrowField" HorizontalAlignment="Left" Margin="960,81,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Height="56" PlaceholderText="Summa att låna"/>
        <TextBlock HorizontalAlignment="Left" Margin="455,192,0,0" Text="Betalningsperiod" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="471" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Margin="455,89,0,0" Text="Hur mycket att låna?" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="471" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Margin="455,89,0,0" Text="Hur mycket att låna?" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="471" FontSize="36"/>
