<Page
    x:Class="Grupp1BankApp.View.MainMeny"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grupp1BankApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="101" Margin="313,92,0,0" Text="Välj ett alternativ:" TextWrapping="Wrap" VerticalAlignment="Top" Width="1070" TextAlignment="Center" FontSize="36"/>
        <Button x:Name="deposit_button" Height="153" Margin="104,346,0,0" VerticalAlignment="Top" Width="362" FontSize="36" Content="Sätt in pengar" Click="deposit_Click"/>
        <Button x:Name="transfer_button" Content="Överför pengar" Height="153" Margin="681,346,0,0" VerticalAlignment="Top" Width="362" FontSize="36" Click="transfer_button_Click"/>
        <Button x:Name="transactions_button" Content="Visa transaktioner" Height="153" Margin="1279,346,0,0" VerticalAlignment="Top" Width="362" FontSize="36" Click="transactions_button_Click"/>
        <Button x:Name="remove_button" Height="153" Margin="381,624,0,0" Width="362" Content="Ta bort ett konto" FontSize="36" VerticalAlignment="Top" Click="remove_button_Click"/>
        <Button x:Name="withraw_button" Height="153" Width="362" Content="Ta ut pengar" FontSize="36" Margin="997,624,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
